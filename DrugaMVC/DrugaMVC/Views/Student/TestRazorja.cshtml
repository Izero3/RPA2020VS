
<h1>Demo sintakse</h1>
<h2>@DateTime.Now.ToShortDateString()</h2>

@{
    string datum = DateTime.Now.ToShortDateString();
    string pozdrav = "Pozdravljen";
}

<h2>Današnji datum je: @datum</h2>
<h3>@pozdrav</h3>

@{
    @:Danes je :@datum </br>
    @pozdrav
}

@*if stavek*@
@if (DateTime.IsLeapYear(DateTime.Now.Year))
{
    @DateTime.Now.Year <text> je prestopno leto</text>
}
else
{
    @DateTime.Now.Year @: ni prestopno leto
}

@*for zanka*@
@for (int i = 0; i < 5; i++)
{
    @i.ToString() <br />
}
